<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="1" android:versionName="1.0" package="com.companyname.flurryadssample">
	<uses-sdk android:minSdkVersion="10" android:targetSdkVersion="23" />
	<application android:label="Flurry Ads" android:icon="@drawable/icon">
    <activity android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
	</application>
  <uses-permission android:name="android.permission.INTERNET" />
  <!--optional permission - highly recommended-->
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
  <!--optional permission -->
  <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

  <!-- External storage is used for video pre-caching features  -->
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
</manifest>