<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:minWidth="25px"
    android:minHeight="25px">
    <ImageView
        android:src="@android:drawable/ic_menu_gallery"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="left"
        android:id="@+id/profileImage" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/linearLayout1">
        <TextView
            android:text="PlayerName"
            android:textColor="@color/Fluffle_green"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/playerNameText" />
        <TextView
            android:text="Date Joined"
            android:textColor="@color/Fluffle_black"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dateJoinedText" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="8px"
        android:id="@+id/linearLayout2">
        <TextView
            android:text="#Buns"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/bunnyCountText"
            android:textColor="@color/Fluffle_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="bunnies"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:textColor="@color/Fluffle_black"
            android:layout_height="wrap_content"
            android:id="@+id/bunnyText" />
    </LinearLayout>
</LinearLayout>